$cmd1 ="cat -n $inputfile > $inputfile.with.linenumber";
system (" $cmd1 ");
print " result in $inputfile.with.linenumber\n ";
}
elsif($useropt ==3){
print "Enter the inputfile followed by output filename \n";
`sh csvtoxls.sh`;
}
elsif($useropt ==4){
