chomp $inputfile;
print "Enter output filename\n";
my $outputfile = <STDIN>;
chomp $outputfile;
$cmd1 ="python txttocsv.py $inputfile $outputfile";
system (" $cmd1 ");
}
elsif($useropt ==10){
print "Enter the inputfile name\n";
